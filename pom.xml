    <artifactId>lenientshutdown</artifactId>
    <version>${revision}.${changelist}</version>
    <name>Lenient shutdown plugin</name>
    <url>https://plugins.jenkins.io/lenientshutdown/</url>
    <packaging>hpi</packaging>

